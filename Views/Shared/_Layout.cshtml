    <meta name="theme-color" content="#ffffff">

    <link rel="canonical" href="https://umuomaku.com/">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <style>
        .general-heading {
            position: relative;
            display: inline-block;
            padding-bottom: 6px;
            margin-bottom: 1rem;
            font-weight: bold;
            text-align: center;
            align-content: center;
        }

            .general-heading::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                height: 3px;
                width: 100%;
                background: linear-gradient(to right, #28a745 50%, #99004a 50%);
            }


        .footer-heading {
            display: inline-block;
            position: relative;
            padding-bottom: 6px;
            margin-bottom: 1rem;
            font-weight: bold;
            /*text-transform: uppercase; */
            color: #99004a;
        }

            .footer-heading::after {
                content: '';
                position: absolute;
                left: 0;
                bottom: 0;
                height: 3px;
                width: 100%;
                background: linear-gradient(to right, #99004a 50%, #28a745 50%);
            }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow bg-white">
            <div class="container-fluid">
                <!-- Logo and Toggle Button Row -->
                <div class="d-flex justify-content-between w-100 align-items-center">
                    <!-- Logo -->
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <span class="fw-bold text-uppercase" style="color: #99004a;">UMUOMAKU</span>
                    </a>

                    <!-- Mobile Toggle -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                            aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <!-- Collapsible Navigation -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link px-3 fw-semibold text-dark hover-active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 fw-semibold text-dark hover-active" asp-area="" asp-controller="Home" asp-action="History">History</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 fw-semibold text-dark hover-active" asp-area="" asp-controller="Home" asp-action="Events">Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 fw-semibold text-dark hover-active" asp-area="" asp-controller="Home" asp-action="Map">Map</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 fw-semibold text-dark hover-active" asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 fw-semibold text-dark hover-active" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 fw-semibold text-dark hover-active" asp-area="" asp-controller="Admin" asp-action="Login"><i class="bi bi-person-fill-gear"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

   
    @RenderBody()


    <footer class="bg-dark text-white pt-5">
        <div class="container">
            <div class="row">

                <!-- Column 1: Umuomaku -->
                <div class="col-md-3 mb-4">
                    <h5 class="footer-heading">Umuomaku</h5>
                    <p class="small text-light">
                        Umuomaku is a peaceful and culturally rich town in Orumba South LGA, Anambra State. Known for its unity, festivities, and development-driven indigenes.
                    </p>
                </div>

                <!-- Column 2: Quick Navigation -->
                <div class="col-md-3 mb-4">
                    <h5 class="footer-heading">Quick Navigation</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-white text-decoration-none d-block py-1"><i class="bi bi-house-door me-2"></i>Home</a></li>
                        <li><a href="/Home/History" class="text-white text-decoration-none d-block py-1"><i class="bi bi-clock-history me-2"></i>History</a></li>
                        <li><a href="/Home/Gallery" class="text-white text-decoration-none d-block py-1"><i class="bi bi-image me-2"></i>Gallery</a></li>
                        <li><a href="/Home/Map" class="text-white text-decoration-none d-block py-1"><i class="bi bi-map me-2"></i>Annotated Map</a></li>
