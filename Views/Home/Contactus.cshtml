@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white text-center py-4 rounded-top-4">
                    <h3><i class="fas fa-envelope-open-text me-2"></i>Contact Us</h3>
                    <p class="mb-0 small">We’d love to hear from you. Fill out the form and we’ll be in touch soon!</p>
                </div>

                <div class="card-body px-4 py-5">
                    <form method="post" asp-controller="Home" asp-action="ContactUs" id="contactForm" novalidate>
                        <div class="mb-4">
                            <label for="helpTopic" class="form-label fw-bold">How can we help?</label>
                            <select class="form-select border-primary" id="helpTopic" name="HelpTopic" required>
                                <option selected disabled value="">Choose an option</option>
                                <option>Technical Support</option>
                                <option>General Question</option>
                                <option>Feedback</option>
                            </select>
                            <div class="invalid-feedback">Please select a help topic.</div>
                        </div>

                        <div class="mb-4">
                            <label for="email" class="form-label fw-bold">Email</label>
                            <input type="email" class="form-control border-primary" id="email" name="Email" placeholder="Eg. john@gmail.com" required />
                            <div class="invalid-feedback">Enter a valid email address.</div>
                        </div>

                        <div class="mb-4">
                            <label for="name" class="form-label fw-bold">Name</label>
                            <input type="text" class="form-control border-primary" id="name" name="Name" placeholder="Eg. John Ugwu" required />
                            <div class="invalid-feedback">Name is required.</div>
                        </div>

                        <div class="mb-4">
                            <label for="phone" class="form-label fw-bold">Phone</label>
                            <input type="tel" class="form-control border-primary" id="phone" name="Phone" placeholder="Eg. +2348086432443" required />
                            <div class="invalid-feedback">Phone number is required.</div>
                        </div>

                        <div class="mb-4">
                            <label for="message" class="form-label fw-bold">Tell us what you need help with</label>
                            <textarea class="form-control border-primary" id="message" name="Message" rows="5" required></textarea>
                            <div class="invalid-feedback">Please provide a message.</div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5 px-4 pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h4 class="card-title text-center mb-3">
                        <i class="bi bi-geo-alt-fill text-success me-2"></i>Visit Umuomaku Town
                    </h4>

                    <!-- Google Map Embed -->
                    <div class="ratio ratio-16x9 mb-3 rounded border">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m23!1m12!1m3!1d1402.9712408303333!2d7.159362321276047!3d5.9669047480287984!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m8!3e2!4m0!4m5!1s0x10430b97b65cd697%3A0xe47f7e0d19a4ba32!2sX585%2BFHW%20St%20Johns%20catholic%20Church%20Umuomaku%2C%20Okpulukpu%20423108%2C%20Anambra%2C%20Nigeria!3m2!1d5.9662367!2d7.1589526999999995!5e0!3m2!1sen!2suk!4v1753226873776!5m2!1sen!2suk"
                                width="100%"
                                height="450"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>

                    <!-- Location Info -->
                    <div class="text-center">
                        <p class="mb-1">
                            <strong>Location:</strong> St. John's Catholic Church, Umuomaku, Okpulukpu 423108, Anambra, Nigeria
                        </p>
                        <a href="https://www.google.com/maps/dir/?api=1&destination=5.9662367,7.1589527"
                           target="_blank"
                           class="btn btn-outline-success mt-3">
                            <i class="bi bi-compass me-1"></i> Get Directions on Google Maps
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Bootstrap 5 form validation
    (() => {
        'use strict'
        const forms = document.querySelectorAll('.needs-validation')
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
    })()
</script>
