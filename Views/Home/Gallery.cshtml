@model IEnumerable<Umuomaku.Data.Models.Gallery>

@{
    ViewData["Title"] = "Gallery";
}

<div class="container py-5">

    <div class="text-center">
        <h3 class="mb-4 fw-bold general-heading"><i class="fas fa-images me-2"></i>Umuomaku Events & Highlights Gallery</h3>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No gallery items available at this time.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="~/uploads/@Url.Content(item.ImageUrl)" class="card-img-top img-fluid" alt="@item.LocationOrEvent" style="object-fit: cover; height: 220px;" />
                        <div class="card-body text-center">
                            <h6 class="card-title mb-0">
                                @item.LocationOrEvent
                            </h6>
                            <small class="text-muted">
                                @item.DateOfEvent?.ToString("MMMM dd, yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
