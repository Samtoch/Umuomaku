@model List<Umuomaku.Data.Models.Highlight>


@{
	ViewData["Title"] = "Home Page";
}

<section class="container my-5">
	<div class="text-center">
		<h3 class="mb-4 fw-bold general-heading">Umuomaku Highlights</h3>
	</div>
	<div class="row g-4">
		@foreach (var item in Model)
		{
			<div class="col-md-4 d-flex">
				<div class="card flex-fill h-100 shadow-sm">
					<img src="~/uploads/@item.ImageUrl" class="card-img-top" style="height: 370px; object-fit: cover;" alt="@item.Title">
					<div class="card-body d-flex flex-column">
						<h5 class="card-title">@item.Title</h5>
						<div class="mt-auto">
							<a href="@Url.Action("HighlightDetail", "Home", new { id = item.Id })" class="btn btn-outline-primary">Read More</a>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</section>

