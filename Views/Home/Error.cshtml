@model Umuomaku.Data.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container my-5">
    <div class="text-center">
        <h1 class="display-4 text-danger">Oops! Something went wrong.</h1>
        <p class="lead">An unexpected error occurred while processing your request.</p>

        @if (Model?.RequestId != null)
        {
            <p class="text-muted">
                <strong>Request ID:</strong> @Model.RequestId
            </p>
        }

        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Go Back Home</a>
    </div>
</div>
