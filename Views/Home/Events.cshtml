@model List<Umuomaku.Data.Models.Event>

@{
	ViewData["Title"] = "Upcoming Events";
}

<section class="container my-5">
	<div class="text-center">
		<h3 class="mb-4 fw-bold general-heading">Umuomaku Events</h3>
	</div>
	<div class="row g-4">
		@foreach (var item in Model)
		{
			<div class="col-md-4 d-flex">
				<div class="card flex-fill h-100 shadow-sm border-0">
					<img src="~/uploads/@item.ImageUrl" class="card-img-top" style="height: 300px; object-fit: cover;" alt="@item.Title">
					<div class="card-body d-flex flex-column">
						<h5 class="card-title fw-semibold">@item.Title</h5>

						<p class="text-muted mb-1">
							<i class="bi bi-geo-alt-fill me-1 text-danger"></i>
							@item.Location
						</p>

						<p class="text-muted mb-2">
							<i class="bi bi-calendar-event me-1 text-primary"></i>
							@item.DateOfEvent.ToString("dddd, dd MMM yyyy")
						</p>

						<p class="card-text text-secondary mb-3" style="font-size: 0.95rem;">
							@(item.Content.Length > 100 ? item.Content.Substring(0, 100) + "..." : item.Content)
						</p>

						<div class="mt-auto">
							<a href="@Url.Action("EventDetail", "Home", new { id = item.Id })" class="btn btn-outline-primary btn-sm">
								Read More
							</a>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</section>

